						<Anchor point="BOTTOMLEFT" relativeKey="$parent.RaidFrame" relativePoint="TOPLEFT" x="0" y="6"/>
					</Anchors>
				</FontString>
			</Layer>
			<Layer level="ARTWORK">
				<!-- placing the color preview is a complete hack job -->
				<Texture parentKey="OthersColorPreview">
					<Size x="60" y="30"/>
					<Color r="1" g="1" b="1"/>
					<Anchors>
						<Anchor point="BOTTOMRIGHT" relativeKey="$parent.Instructions1" relativePoint="TOPRIGHT" x="-30" y="5"/>
